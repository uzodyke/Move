const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Moving Services UK Coverage Areas",
  "description": "Professional moving and removal services across the UK including London, Manchester, Birmingham, Leeds, Glasgow, Bristol, Edinburgh, Liverpool and all Hampshire cities",
