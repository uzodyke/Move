    "@type": "MovingCompany",
    "name": "Tigrex Move",
    "telephone": "+44 7459 665 002",
    "email": "tigrexmove@gmail.com"
  },
  "areaServed": [
    ...ukCities.map(city => ({
      "@type": "City",
      "name": city.name,
      "addressCountry": "GB"
    })),
    ...hampshireCities.map(city => ({
      "@type": "City",
      "name": city.name,
      "addressCountry": "GB",
      "containedInPlace": {
        "@type": "AdministrativeArea",
        "name": "Hampshire"
      }
    }))
