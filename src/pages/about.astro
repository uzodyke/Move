---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "About Tigrex Move - Professional Moving Company UK";
const description = "Learn about Tigrex Move - professional moving company serving the UK. Over 10 years experience, fully insured, 24/7 service. Meet our expert team and discover our story.";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "mainEntity": {
    "@type": "MovingCompany",
    "name": "Tigrex Move",
    "description": "Professional moving company serving the UK with over 10 years of experience",
    "foundingDate": "2013",
    "numberOfEmployees": "25-50",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "17 Queens Street, Portsea",
      "addressLocality": "Portsmouth",
      "postalCode": "PO1 3GB",
      "addressCountry": "GB"
    }
  }
};
---

<BaseLayout title={title} description={description} structuredData={structuredData}>
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-blue-900 to-indigo-800 text-white py-20 overflow-hidden">
      <!-- Team Background Image -->
      <div class="absolute inset-0 opacity-25">
        <img
          src="/images/moving-team-action.jpg"
          alt="Tigrex Move professional team in action during a house move"
          class="w-full h-full object-cover"
          loading="eager"
          onerror="this.style.display='none'"
        />
      </div>
      <div class="absolute inset-0 bg-gradient-to-br from-blue-900/70 to-indigo-800/70"></div>
      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
          About Tigrex Move
        </h1>
        <p class="text-xl sm:text-2xl text-blue-100 leading-relaxed">
          Your trusted moving partner across the UK for over 10 years
        </p>
      </div>
    </section>

    <!-- Company Story -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
              Our Story
            </h2>
            <div class="prose prose-lg text-gray-600 space-y-4">
              <p>
                Founded in 2013, Tigrex Move began as a small family business with a simple mission:
                to make moving stress-free for everyone. What started with just two vans and a handful
                of dedicated movers has grown into one of the UK's most trusted moving companies.
              </p>
              <p>
                Over the years, we've helped thousands of families and businesses relocate across the UK
                and internationally. Our commitment to exceptional service, fair pricing, and treating
                every customer's belongings as our own has earned us a reputation that we're proud of.
              </p>
              <p>
                Today, we operate a fleet of modern vehicles, employ over 40 trained professionals,
                and continue to expand our services while maintaining the personal touch that made us
                who we are.
              </p>
            </div>
          </div>

          <div class="bg-gray-50 rounded-2xl p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Company Milestones</h3>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">
                  1
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">2013 - Founded</h4>
                  <p class="text-gray-600 text-sm">Started with 2 vans and big dreams</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">
                  2
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">2016 - First Milestone</h4>
                  <p class="text-gray-600 text-sm">1,000th successful move completed</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">
                  3
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">2019 - International Expansion</h4>
                  <p class="text-gray-600 text-sm">Added international moving services</p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">
                  4
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">2023 - 10,000 Moves</h4>
                  <p class="text-gray-600 text-sm">Celebrating over 10,000 successful moves</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Values -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Our Values
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            The principles that guide every move we make
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Care</h3>
            <p class="text-gray-600">We treat your belongings with the same care we'd give our own family's possessions.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Reliability</h3>
            <p class="text-gray-600">On time, every time. You can count on us to be there when we say we will.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Transparency</h3>
            <p class="text-gray-600">No hidden fees, no surprise charges. What we quote is what you pay.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Excellence</h3>
            <p class="text-gray-600">We continually strive to exceed expectations and deliver outstanding service.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Meet Our Leadership Team
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            The experienced professionals who make Tigrex Move your trusted partner
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-32 h-32 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full mx-auto mb-6 flex items-center justify-center">
              <span class="text-3xl font-bold text-white">JD</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">James Davidson</h3>
            <p class="text-blue-600 font-semibold mb-3">Founder & CEO</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              With over 15 years in the moving industry, James founded Tigrex Move with a vision
              to revolutionize customer service in the moving sector.
            </p>
          </div>

          <div class="text-center">
            <div class="w-32 h-32 bg-gradient-to-br from-green-400 to-green-600 rounded-full mx-auto mb-6 flex items-center justify-center">
              <span class="text-3xl font-bold text-white">SM</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Sarah Mitchell</h3>
            <p class="text-blue-600 font-semibold mb-3">Operations Director</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              Sarah ensures every move runs smoothly, overseeing our team of professional movers
              and maintaining our high service standards.
            </p>
          </div>

          <div class="text-center">
            <div class="w-32 h-32 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full mx-auto mb-6 flex items-center justify-center">
              <span class="text-3xl font-bold text-white">MT</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Michael Thompson</h3>
            <p class="text-blue-600 font-semibold mb-3">Customer Service Manager</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              Michael leads our award-winning customer service team, ensuring every client
              receives personalized attention and support throughout their move.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Certifications & Awards -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Certifications & Recognition
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Your trust is backed by industry recognition and professional certifications
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="bg-white rounded-xl p-6 text-center shadow-md">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-bold text-blue-600">BAR</span>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">BAR Member</h3>
            <p class="text-sm text-gray-600">British Association of Removers certified member</p>
          </div>

          <div class="bg-white rounded-xl p-6 text-center shadow-md">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-bold text-green-600">FIDI</span>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">FIDI Accredited</h3>
            <p class="text-sm text-gray-600">International Federation of International Movers</p>
          </div>

          <div class="bg-white rounded-xl p-6 text-center shadow-md">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Fully Insured</h3>
            <p class="text-sm text-gray-600">£1M public liability and goods in transit cover</p>
          </div>

          <div class="bg-white rounded-xl p-6 text-center shadow-md">
            <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-yellow-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">4.8★ Rating</h3>
            <p class="text-sm text-gray-600">Based on 127+ customer reviews</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Statistics -->
    <section class="py-16 bg-blue-600 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold mb-4">
            Our Track Record
          </h2>
          <p class="text-xl text-blue-100">
            Numbers that speak for our commitment to excellence
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl sm:text-5xl font-bold mb-2">10,000+</div>
            <p class="text-blue-100 text-lg">Successful Moves</p>
          </div>
          <div class="text-center">
            <div class="text-4xl sm:text-5xl font-bold mb-2">10+</div>
            <p class="text-blue-100 text-lg">Years Experience</p>
          </div>
          <div class="text-center">
            <div class="text-4xl sm:text-5xl font-bold mb-2">40+</div>
            <p class="text-blue-100 text-lg">Professional Staff</p>
          </div>
          <div class="text-center">
            <div class="text-4xl sm:text-5xl font-bold mb-2">98%</div>
            <p class="text-blue-100 text-lg">Customer Satisfaction</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gray-900 text-white">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">
          Ready to Experience the Tigrex Move Difference?
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          Join thousands of satisfied customers who trust us with their most important moves.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/quote" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200">
            Get Free Quote
          </a>
          <a href="tel:+447459665002" class="bg-gray-700 hover:bg-gray-600 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors duration-200">
            Call: +44 7459 665 002
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>