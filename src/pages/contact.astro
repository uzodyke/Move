---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "Contact Tigrex Move | Professional Moving Services UK | Get Quote";
const description = "Contact Tigrex Move for professional moving services across the UK. Call +44 20 3808 9393 or email for free quotes. 24/7 emergency service available.";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": "Tigrex Move",
    "telephone": "+44 7459 665 002",
    "email": "tigrexmove@gmail.com",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "17 Queens Street, Portsea",
      "addressLocality": "Portsmouth",
      "postalCode": "PO1 3GB",
      "addressCountry": "GB"
    },
    "openingHoursSpecification": {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ],
      "opens": "00:00",
      "closes": "23:59"
    }
  }
};
---

<BaseLayout title={title} description={description} structuredData={structuredData}>
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-blue-900 to-indigo-800 text-white py-20 overflow-hidden">
      <!-- Moving Truck Background -->
      <div class="absolute inset-0 opacity-20">
        <img
          src="/images/moving-truck-street.jpg"
          alt="Tigrex Move truck on Portsmouth street ready for house move"
          class="w-full h-full object-cover"
          loading="eager"
          onerror="this.style.display='none'"
        />
      </div>
      <div class="absolute inset-0 bg-gradient-to-br from-blue-900/80 to-indigo-800/80"></div>
      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
          Contact Tigrex Move
        </h1>
        <p class="text-xl sm:text-2xl text-blue-100 leading-relaxed">
          Get in touch for your free moving quote. Available 24/7 across the UK.
        </p>
      </div>
    </section>

    <!-- Contact Methods -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Multiple Ways to Reach Us
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Choose the contact method that works best for you. We're here to help 24/7.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
          <!-- Phone -->
          <div class="text-center bg-gray-50 rounded-xl p-8">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Call Us Now</h3>
            <p class="text-gray-600 mb-6">Speak directly with our moving experts for immediate assistance and free quotes.</p>
            <a href="tel:+447459665002" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 inline-block mb-3">
              +44 7459 665 002
            </a>
            <p class="text-sm text-gray-500">Available 24/7 â€¢ Free consultation</p>
          </div>

          <!-- Email -->
          <div class="text-center bg-gray-50 rounded-xl p-8">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Email Us</h3>
            <p class="text-gray-600 mb-6">Send us detailed information about your move for a comprehensive quote and planning.</p>
            <a href="mailto:tigrexmove@gmail.com" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 inline-block mb-3">
              tigrexmove@gmail.com
            </a>
            <p class="text-sm text-gray-500">Response within 2 hours</p>
          </div>

          <!-- Emergency -->
          <div class="text-center bg-red-50 rounded-xl p-8 border-2 border-red-200">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Emergency Line</h3>
            <p class="text-gray-600 mb-6">Urgent moves, last-minute relocations, and emergency moving services available 24/7.</p>
            <a href="tel:+447459665002" class="bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 inline-block mb-3">
              +44 7459 665 002
            </a>
            <p class="text-sm text-red-600 font-semibold">Same-day service available</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Send Us a Message
          </h2>
          <p class="text-xl text-gray-600">
            Fill out the form below and we'll get back to you within 15 minutes during business hours.
          </p>
        </div>

        <div class="bg-white rounded-2xl shadow-xl p-8">
          <form action="https://formspree.io/f/mqayagpb" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Hidden Formspree configuration -->
            <input type="hidden" name="_subject" value="New Contact Form Submission - Tigrex Move" />
            <input type="hidden" name="_replyto" value="email" />
            <input type="hidden" name="_next" value="https://tigrexmove.co.uk/contact#success" />
            <!-- Name -->
            <div class="md:col-span-1">
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Your full name"
              />
            </div>

            <!-- Email -->
            <div class="md:col-span-1">
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="your@email.com"
              />
            </div>

            <!-- Phone -->
            <div class="md:col-span-1">
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Phone Number *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="+44 7XXX XXX XXX"
              />
            </div>

            <!-- Service Type -->
            <div class="md:col-span-1">
              <label for="service" class="block text-sm font-medium text-gray-700 mb-2">
                Service Required
              </label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Select a service</option>
                <option value="residential">Residential Moving</option>
                <option value="commercial">Commercial Moving</option>
                <option value="packing">Packing Services</option>
                <option value="storage">Storage Solutions</option>
                <option value="international">International Removals</option>
                <option value="emergency">Emergency Moving</option>
                <option value="other">Other</option>
              </select>
            </div>

            <!-- From Location -->
            <div class="md:col-span-1">
              <label for="from" class="block text-sm font-medium text-gray-700 mb-2">
                Moving From
              </label>
              <input
                type="text"
                id="from"
                name="from"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Postcode or city"
              />
            </div>

            <!-- To Location -->
            <div class="md:col-span-1">
              <label for="to" class="block text-sm font-medium text-gray-700 mb-2">
                Moving To
              </label>
              <input
                type="text"
                id="to"
                name="to"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Postcode or city"
              />
            </div>

            <!-- Date -->
            <div class="md:col-span-1">
              <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
                Preferred Moving Date
              </label>
              <input
                type="date"
                id="date"
                name="date"
                min={new Date().toISOString().split('T')[0]}
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>

            <!-- Property Size -->
            <div class="md:col-span-1">
              <label for="property" class="block text-sm font-medium text-gray-700 mb-2">
                Property Size
              </label>
              <select
                id="property"
                name="property"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Select property size</option>
                <option value="studio">Studio</option>
                <option value="1-bed">1 Bedroom</option>
                <option value="2-bed">2 Bedroom</option>
                <option value="3-bed">3 Bedroom</option>
                <option value="4-bed">4+ Bedroom</option>
                <option value="office">Office/Commercial</option>
              </select>
            </div>

            <!-- Message -->
            <div class="md:col-span-2">
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Additional Information
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                placeholder="Tell us about any special requirements, access issues, fragile items, etc."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <div class="md:col-span-2">
              <button
                type="submit"
                class="w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-200"
              >
                Send Message
              </button>
            </div>

            <!-- Trust Indicators -->
            <div class="md:col-span-2 text-center pt-4 border-t border-gray-100">
              <div class="flex items-center justify-center space-x-6 text-sm text-gray-500">
                <div class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span>15-minute response</span>
                </div>
                <div class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                  <span>Secure & confidential</span>
                </div>
                <div class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span>Free quotes</span>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>

    <!-- Office Information -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Office Details -->
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
              Visit Our Office
            </h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <svg class="w-6 h-6 text-blue-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Address</h3>
                  <p class="text-gray-600">
                    17 Queens Street, Portsea<br />
                    Portsmouth, PO1 3GB<br />
                    United Kingdom
                  </p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <svg class="w-6 h-6 text-blue-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Office Hours</h3>
                  <div class="text-gray-600 space-y-1">
                    <p>Monday - Friday: 8:00 AM - 6:00 PM</p>
                    <p>Saturday: 9:00 AM - 4:00 PM</p>
                    <p>Sunday: 10:00 AM - 3:00 PM</p>
                    <p class="font-semibold text-blue-600">24/7 Emergency Service</p>
                  </div>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <svg class="w-6 h-6 text-blue-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 0h6m0 0v3m0 9v-3m0 3H8m8 0h2a2 2 0 002-2V7a2 2 0 00-2-2h-2"/>
                </svg>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Parking</h3>
                  <p class="text-gray-600">
                    Free visitor parking available on Queens Street.
                    Public transport links via Portsmouth & Southsea station.
                  </p>
                </div>
              </div>
            </div>

            <div class="mt-8">
              <a href="https://maps.google.com/?q=17+Queens+Street+Portsea,+Portsmouth,+PO1+3GB" target="_blank" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 inline-flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                </svg>
                Get Directions
              </a>
            </div>
          </div>

          <!-- Map Placeholder -->
          <div class="bg-gray-200 rounded-2xl h-96 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <p class="text-gray-500">
                Interactive Map<br />
                <span class="text-sm">17 Queens Street, Portsmouth</span>
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Links -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Quick Access
          </h2>
          <p class="text-xl text-gray-600">
            Fast links to our most popular services and information
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <a href="/quote" class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-200 text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Get Quote</h3>
            <p class="text-sm text-gray-600">Free, instant moving quote</p>
          </a>

          <a href="/faq" class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-200 text-center">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">FAQ</h3>
            <p class="text-sm text-gray-600">Frequently asked questions</p>
          </a>

          <a href="/services" class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-200 text-center">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Services</h3>
            <p class="text-sm text-gray-600">Our moving services</p>
          </a>

          <a href="/about" class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-200 text-center">
            <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">About Us</h3>
            <p class="text-sm text-gray-600">Our company story</p>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>